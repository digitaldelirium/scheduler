<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.112"
         fx:controller="edu.wgu.scheduler.controllers.AppointmentViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
             <Label fx:id="lblViewScope" text="Choose View:"/>
             <HBox fx:id="hbViewScope" prefHeight="100.0" prefWidth="200.0">
                 <VBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                 </VBox.margin>
                 <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                 </padding>
                 <children>
                     <RadioButton fx:id="rdoWeekly" mnemonicParsing="false" text="Weekly">
                         <HBox.margin>
                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                         </HBox.margin>
                     </RadioButton>
                     <RadioButton fx:id="rdoMonthly" mnemonicParsing="false" text="Monthly">
                         <HBox.margin>
                             <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                         </HBox.margin>
                     </RadioButton>
                 </children>
             </HBox>
             <HBox fx:id="hbEditorBar">
                 <children>
                     <ToggleButton fx:id="tbAppointmentEditor" mnemonicParsing="false" onAction="#toggleEditable"
                                   text="Enable Edit Mode">
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                         </HBox.margin>
                     </ToggleButton>
                     <Button fx:id="btnNewAppointment" mnemonicParsing="false" onAction="#createNewAppointment"
                             text="New Appointment">
                         <HBox.margin>
                             <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                         </HBox.margin>
                     </Button>
                 </children>
             </HBox>
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label fx:id="lblTitle" text="Title" />
                  <Label fx:id="lblDescription" text="Description" GridPane.rowIndex="1" />
                  <Label fx:id="lblLocation" text="Location" GridPane.rowIndex="2" />
                  <Label fx:id="lblContact" text="Contact" GridPane.rowIndex="3" />
                  <Label fx:id="lblUrl" text="URL" GridPane.rowIndex="4" />
                  <Label fx:id="lblStart" text="Start Time" GridPane.rowIndex="5" />
                  <Label fx:id="lblEnd" text="End Time" GridPane.rowIndex="6" />
                  <Label fx:id="lblCustomerName" text="Customer Name" GridPane.rowIndex="7" />
                  <Label fx:id="lblCreatedDate" text="Created Date" GridPane.rowIndex="8" />
                  <Label fx:id="lblCreatedBy" text="Created By" GridPane.rowIndex="9" />
                  <Label fx:id="lblLastUpdated" text="Last Updated" GridPane.rowIndex="10" />
                   <TextField fx:id="txtTitle" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                   <TextField fx:id="txtDescription" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                   <TextField fx:id="txtLocation" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                   <TextField fx:id="txtContact" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                   <TextField fx:id="txtUrl" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                   <TextField fx:id="txtStart" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                   <TextField fx:id="txtEnd" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                  <TextField fx:id="txtCustomerName" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                   <TextField fx:id="txtCreatedDate" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                   <TextField fx:id="txtCreatedBy" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
                   <TextField fx:id="txtLastUpdated" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
                   <ButtonBar fx:id="buttonbarAppointmentEditor" prefHeight="40.0" prefWidth="200.0"
                              GridPane.columnIndex="1" GridPane.rowIndex="12">
                    <buttons>
                        <Button fx:id="btnAppointmentSave" defaultButton="true" disable="true" mnemonicParsing="false"
                                onAction="#saveAppointment" text="Save"/>
                        <Button fx:id="btnAppointmentReset" cancelButton="true" disable="true" mnemonicParsing="false"
                                onAction="#clearForm" text="Reset"/>
                    </buttons>
                      <GridPane.margin>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                      </GridPane.margin>
                  </ButtonBar>
               </children>
            </GridPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
